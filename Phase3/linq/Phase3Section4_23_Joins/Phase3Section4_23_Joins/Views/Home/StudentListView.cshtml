using System.Dynamic
@{
    ViewData["Title"] = "StudentListView";
}

<h2>StudentListView</h2>
<div class="container">
    <br />
    <h4>List Of Students</h4>
    <div class="row">
        <div class="col-sm-7">
            <div class="row">
                <div class="col-sm-3">Name/Marks</div>
                <div class="col-sm-3">Email</div>
                <div class="col-sm-3">Class</div>
                <div class="col-sm-3">Address </div>
            </div>
            <hr />
            @{
                List<Student> students = (List<Student>)ViewData["students"];
                foreach (Student st in students)
                {
                    <div class="row">
                        <div class="col-sm-3">@st.Name - @st.MarksPercent%</div>
                        <div class="col-sm-3">@st.Email</div>
                        <div class="col-sm-3">@st.Class</div>
                        <div class="col-sm-3">@st.Address </div>
                    </div>
                }
            }
            <div class="clearfix"></div><br />
            <h4>StudentList Inner join with Subjects</h4>
            <div class="row">
                <div class="col-sm-3">Name</div>
                <div class="col-sm-3">Email</div>
                <div class="col-sm-3">Class</div>
                <div class="col-sm-3">Subject </div>
            </div>
            <hr />
            @{
                IEnumerable<dynamic> innerjoin = (IEnumerable<dynamic>)ViewData["innerjoin"];

                foreach (dynamic st in innerjoin)
                {

                    <div class="row">
                        <div class="col-sm-3"> @st.GetType().GetProperty("Name").GetValue(st, null)</div>
                        <div class="col-sm-3">@st.GetType().GetProperty("Email").GetValue(st, null)</div>
                        <div class="col-sm-3">@st.GetType().GetProperty("Class").GetValue(st, null)</div>
                        <div class="col-sm-3">@st.GetType().GetProperty("Subject").GetValue(st, null)</div>
                    </div>
                }
            }
            <div class="clearfix"></div><br />

            <h4>StudentList Left join with Subjects</h4>
            <div class="row">
                <div class="col-sm-3">Name</div>
                <div class="col-sm-3">Email</div>
                <div class="col-sm-3">Class</div>
                <div class="col-sm-3">Subject </div>
            </div>
            <hr />
            @{
                IEnumerable<dynamic> leftjoin = (IEnumerable<dynamic>)ViewData["leftjoin"];

                foreach (dynamic st in leftjoin)
                {

                    <div class="row">
                        <div class="col-sm-3"> @st.GetType().GetProperty("Name").GetValue(st, null)</div>
                        <div class="col-sm-3">@st.GetType().GetProperty("Email").GetValue(st, null)</div>
                        <div class="col-sm-3">@st.GetType().GetProperty("Class").GetValue(st, null)</div>
                        <div class="col-sm-3">@st.GetType().GetProperty("Subject").GetValue(st, null)</div>

                    </div>
                }
            }
            <div class="clearfix"></div><br />

            <h4>StudentList Cross join with Subjects</h4>
            <div class="row">
                <div class="col-sm-3">Name</div>
                <div class="col-sm-3">Email</div>
                <div class="col-sm-3">Class</div>
                <div class="col-sm-3">Subject </div>
            </div>
            <hr />
            @{
                IEnumerable<dynamic> crossjoin = (IEnumerable<dynamic>)ViewData["crossjoin"];

                foreach (dynamic st in crossjoin)
                {

                    <div class="row">
                        <div class="col-sm-3"> @st.GetType().GetProperty("Name").GetValue(st, null)</div>
                        <div class="col-sm-3">@st.GetType().GetProperty("Email").GetValue(st, null)</div>
                        <div class="col-sm-3">@st.GetType().GetProperty("Class").GetValue(st, null)</div>
                        <div class="col-sm-3">@st.GetType().GetProperty("Subject").GetValue(st, null)</div>

                    </div>
                }
            }
            <div class="clearfix"></div><br />

            <h4>StudentList Group join with Subjects</h4>
            <hr />
            @{
                IEnumerable<dynamic> groupjoin = (IEnumerable<dynamic>)ViewData["groupjoin"];
                foreach (var st in groupjoin)
                {
                    var subs = @st.GetType().GetProperty("subjects").GetValue(st, null);
                    <div class="row">
                                    <div class="col-sm-12">
                                        <b>@st.GetType().GetProperty("Name").GetValue(st, null)</b><br />
                                        @foreach (var sub in subs)
                                        {
                                            @sub.GetType().GetProperty("Name").GetValue(sub, null)<br />
                                        }
                                        <br />
                                    </div>
                    </div>
                }

            }
            <div class="clearfix"></div><br />

        </div>
    </div>
</div>
